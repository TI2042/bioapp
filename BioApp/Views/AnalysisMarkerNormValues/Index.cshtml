@model IEnumerable<BioApp.Models.AnalysisMarkerNormValue>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AnalysisMarker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.minValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.maxValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
