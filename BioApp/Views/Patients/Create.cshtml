@model BioApp.Models.Patient

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить пациента</h1>

<hr />

<button onclick="OpenCommonData()">Общие данные</button>
<button onclick="OpenExogenousFactors()">Экзогенные факторы</button>
<button onclick="OpenEndogenousFactors()">Экзогенные факторы</button>

<form asp-action="Create">
    <div class="row">
        <div class="col" id="CommonData" style="display:block">
            <b>Общие данные</b>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="passportNumber" class="control-label"></label>
                <input asp-for="passportNumber" class="form-control" />
                <span asp-validation-for="passportNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="INN" class="control-label"></label>
                <input asp-for="INN" class="form-control" />
                <span asp-validation-for="INN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OMSNumber" class="control-label"></label>
                <input asp-for="OMSNumber" class="form-control" />
                <span asp-validation-for="OMSNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="birthDate" class="control-label"></label>
                <input asp-for="birthDate" class="form-control" />
                <span asp-validation-for="birthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gender" class="control-label"></label>
                <select asp-for="gender" class="form-control" asp-items="@Html.GetEnumSelectList<Gender>()"></select>
                <span asp-validation-for="gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="registrationDate" class="control-label"></label>
                <input asp-for="registrationDate" class="form-control" />
                <span asp-validation-for="registrationDate" class="text-danger"></span>
            </div>
        </div>

        <div class="col" id="ExogenousFactors" style="display:none">
            <b>Экзогенные факторы</b>
            <div class="form-group">
                <label asp-for="burns" class="control-label"></label>
                <select asp-for="burns" class="form-control" asp-items="@Html.GetEnumSelectList<Burns>()"></select>
                <span asp-validation-for="burns" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ageGroup" class="control-label"></label>
                <select asp-for="ageGroup" class="form-control" asp-items="@Html.GetEnumSelectList<AgeGroup>()"></select>
                <span asp-validation-for="ageGroup" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="immuneSystemDiseases" class="control-label"></label>
                <input type="checkbox" asp-for="immuneSystemDiseases" class="form-control" />
                <span asp-validation-for="immuneSystemDiseases" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="skinType" class="control-label"></label>
                <select asp-for="skinType" class="form-control" asp-items="@Html.GetEnumSelectList<SkinType>()"></select>
                <span asp-validation-for="skinType" class="text-danger"></span>
            </div>
            <img src="~/img/fitz.png" background-color="inherit" width="600" height="150" />
            <div class="form-group">
                <label asp-for="eyeType" class="control-label"></label>
                <select asp-for="eyeType" class="form-control" asp-items="@Html.GetEnumSelectList<EyeType>()"></select>
                <span asp-validation-for="eyeType" class="text-danger"></span>
            </div>
            <img src="~/img/eye.png" background-color="inherit" width="600" height="450" />
            <div class="form-group">
                <label asp-for="hairType" class="control-label"></label>
                <select asp-for="hairType" class="form-control" asp-items="@Html.GetEnumSelectList<HairType>()"></select>
                <span asp-validation-for="hairType" class="text-danger"></span>
            </div>
            <img src="~/img/hair.png" background-color="inherit" width="600" height="150" />

        </div>

       
        <div class="col" id="EndogenousFactors" style="display:none">
            <b>Эндогенные факторы</b>
            <div class="form-group">
                <label asp-for="previousMelanoma" class="control-label"></label>
                <input type="checkbox" asp-for="previousMelanoma" class="form-control" />
                <span asp-validation-for="previousMelanoma" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="previousMelanomaInFamily" class="control-label"></label>
                <input type="checkbox" asp-for="previousMelanomaInFamily" class="form-control" />
                <span asp-validation-for="previousMelanomaInFamily" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PresenceOfFreckles" class="control-label"></label>
                <input type="checkbox" asp-for="PresenceOfFreckles" class="form-control" />
                <span asp-validation-for="PresenceOfFreckles" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HormonalChanges" class="control-label"></label>
                <input type="checkbox" asp-for="HormonalChanges" class="form-control" />
                <span asp-validation-for="HormonalChanges" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ObligateFormsOfPrecancer" class="control-label"></label>
                <input type="checkbox" asp-for="ObligateFormsOfPrecancer" class="form-control" />
                <span asp-validation-for="ObligateFormsOfPrecancer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nevusType" class="control-label"></label>
                <select asp-for="nevusType" class="form-control" asp-items="@Html.GetEnumSelectList<NevusType>()"></select>
                <span asp-validation-for="nevusType" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <input type="submit" value="Добавить" class="btn btn-primary" />
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="row">
            <div class="col">
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-primary">Назад к списку</a>
                </div>
            </div>
     </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    function OpenCommonData() 
    {
        var CommonData = document.getElementById("CommonData");
        var ExogenousFactors = document.getElementById("ExogenousFactors");
        var EndogenousFactors = document.getElementById("EndogenousFactors");
        if ((window.getComputedStyle(CommonData).display === "none") && ((window.getComputedStyle(ExogenousFactors).display === "block") || (window.getComputedStyle(EndogenousFactors).display === "block"))) 
        {
            CommonData.style.display = "block";
            ExogenousFactors.style.display = "none";
            EndogenousFactors.style.display = "none";
        }
    }
</script>

<script>
    function OpenExogenousFactors() {
        var CommonData = document.getElementById("CommonData");
        var ExogenousFactors = document.getElementById("ExogenousFactors");
        var EndogenousFactors = document.getElementById("EndogenousFactors");
        if ((window.getComputedStyle(ExogenousFactors).display === "none") && ((window.getComputedStyle(CommonData).display === "block") || (window.getComputedStyle(EndogenousFactors).display === "block"))) {
            ExogenousFactors.style.display = "block";
            CommonData.style.display = "none";
            EndogenousFactors.style.display = "none";
        }
    }
</script>

<script>
    function OpenEndogenousFactors() {
        var CommonData = document.getElementById("CommonData");
        var ExogenousFactors = document.getElementById("ExogenousFactors");
        var EndogenousFactors = document.getElementById("EndogenousFactors");
        if ((window.getComputedStyle(EndogenousFactors).display === "none") && ((window.getComputedStyle(ExogenousFactors).display === "block") || (window.getComputedStyle(CommonData).display === "block"))) {
            EndogenousFactors.style.display = "block";
            ExogenousFactors.style.display = "none";
            CommonData.style.display = "none";
        }
    }
</script>