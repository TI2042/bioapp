        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AnalysisMarker.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientGroup.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.minValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.maxValue)
            </td>
