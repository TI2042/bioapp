@model IEnumerable<BioApp.Models.MKBClassifier>

@{
    ViewData["Title"] = "Index";
}

<h1>Диагнозы пациента @ViewBag.PatientId.name по МКБ</h1>

<p>
    <a asp-action="Select"  class="btn btn-primary" asp-route-patientId="@ViewBag.PatientId.id">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.additionalInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.additionalInfo)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.id" asp-route-patientId="@ViewBag.PatientId.id">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.id" asp-route-patientId="@ViewBag.PatientId.id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
