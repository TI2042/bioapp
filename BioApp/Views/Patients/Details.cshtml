            @Html.DisplayNameFor(model => model.passportNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.passportNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.INN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.INN)
