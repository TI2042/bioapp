@model BioApp.Models.Doctor

@{
    ViewData["Title"] = "Редактировать";
}

<h3>Редактировать врача</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorSpecializationId" class="control-label"></label>
                <select asp-for="DoctorSpecializationId" class="form-control" asp-items="ViewBag.DoctorSpecializationId"></select>
                <span asp-validation-for="DoctorSpecializationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />| <a asp-action="Index">Назад к списку</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
