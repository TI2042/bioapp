@model BioApp.Models.KITMarker

@{
    ViewData["Title"] = "Добавить маркер";
}

<h1>Добавить маркер</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnalysisId" class="control-label"></label>
                <select asp-for="AnalysisId" class="form-control" asp-items="ViewBag.AnalysisId"></select>
            </div>

            <div class="form-group">
                <label asp-for="TypeId" class="control-label"></label>
                <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="absent" /> @Html.DisplayNameFor(model => model.absent)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="heterozygosity" /> @Html.DisplayNameFor(model => model.heterozygosity)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="homozygosity" /> @Html.DisplayNameFor(model => model.homozygosity)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NA" /> @Html.DisplayNameFor(model => model.NA)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" /> | <a asp-action="Index">Назад к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
