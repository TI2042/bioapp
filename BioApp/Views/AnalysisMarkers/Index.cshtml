@model IEnumerable<BioApp.Models.AnalysisMarker>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.measure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.measureEn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nameEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.measure)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.measureEn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
